<Ui>
    <Frame name="AdventureGuide" mixin="AdventureGuideMixin" parent="UIParent" inherits="PortraitFrameTemplate" frameStrata="HIGH" enableMouse="true" resizable="true" movable="true">
        <Size x="900" y="500"/>
        <Anchors>
            <Anchor point="CENTER" x="0" y="0"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture textureSubLevel="-1">
                    <Color r="0.105" g="0.1" b="0.1" a="0.95"/>
                    <Size y="35"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="-25"/>
                        <Anchor point="TOPRIGHT" x="0" y="-25"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture atlas="AdventureMapLabel-Large" hidden="true">
                    <Size y="35"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="260" y="-25"/>
                        <Anchor point="TOPRIGHT" x="-120" y="-25"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="home" inherits="UIPanelButtonTemplate" text="Home">
                <Size x="120" y="32"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="60" y="-25"/>
                </Anchors>
            </Button>
            <Button parentKey="subMenu1" inherits="UIPanelButtonTemplate" text="Home" hidden="true">
                <Size x="120" y="32"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.home" relativePoint="RIGHT" x="10" y="0"/>
                </Anchors>
            </Button>
            <ScrollFrame parentKey="homeGridview" inherits="AdventureWidgetsGridviewTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-60"/>
                    <Anchor point="BOTTOMRIGHT" x="-6" y="16"/>
                </Anchors>
            </ScrollFrame>

            <Frame parentKey="content">
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-60"/>
                    <Anchor point="BOTTOMRIGHT" x="-6" y="16"/>
                </Anchors>
            </Frame>

            <Button parentKey="resize" inherits="PanelResizeButtonTemplate">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnUpdate method="OnUpdate"/>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>