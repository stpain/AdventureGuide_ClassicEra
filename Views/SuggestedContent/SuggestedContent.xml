<Ui>
    <Frame name="AdventureGuideSuggestedContentView" mixin="AdventureGuideSuggestedContentMixin" hidden="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="background" atlas="warboard-background">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="00"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="leftPanel" atlas="adventureguide-pane-large">
                    <Size x="335"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="30" y="-60"/>
                        <Anchor point="BOTTOMLEFT" x="30" y="60"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="topRightPanel" atlas="adventureguide-pane-small">
                    <Size x="344" y="181"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-30" y="-60"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="bottomRightPanel" atlas="adventureguide-pane-small">
                    <Size x="344" y="181"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-30" y="60"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentKey="topBorder" atlas="_Garr_InfoBoxBorder-Top" horizTile="true">
                    <!-- <Texcoords left="0" right="0" top="1" bottom="0"/> -->
                    <Size y="18"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.background" relativePoint="TOPLEFT" x="0" y="0"/>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.background" relativePoint="TOPRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>

                <Texture parentKey="leftPanelPortraitRing" atlas="adventureguide-ring">
                    <Size x="94" y="94"/>
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.leftPanel" relativePoint="TOP" x="0" y="20"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="topRightPanelPortraitRing" atlas="adventureguide-ring">
                    <Size x="94" y="94"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.topRightPanel" relativePoint="TOPLEFT" x="-30" y="20"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="bottomRightPanelPortraitRing" atlas="adventureguide-ring">
                    <Size x="94" y="94"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.bottomRightPanel" relativePoint="TOPLEFT" x="-30" y="20"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY" textureSubLevel="-1">
                <Texture parentKey="leftPanelPortraitRingIcon" atlas="Mobile-QuestIcon">
                    <Size x="64" y="64"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.leftPanelPortraitRing" relativePoint="CENTER" x="0" y="-2"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="topRightPanelPortraitRingIcon" atlas="Mobile-TreasureIcon">
                    <Size x="64" y="64"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.topRightPanelPortraitRing" relativePoint="CENTER" x="0" y="-2"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="bottomRightPanelPortraitRingIcon" atlas="Mobile-CombatBadgeIcon">
                    <Size x="64" y="64"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.bottomRightPanelPortraitRing" relativePoint="CENTER" x="0" y="-2"/>
                    </Anchors>
                </Texture>

                <FontString parentKey="leftPanelHeader" font="Fonts\MORPHEUS.ttf" text="Questing">
                    <Size x="300" y="32"/>
                    <Color r="0.1" g="0.1" b="0.1"/>
                    <FontHeight val="34"/>
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.leftPanelPortraitRing" relativePoint="BOTTOM" x="0" y="-10"/>
                    </Anchors>
                </FontString>

                <Texture parentKey="leftPanelContentTexture" atlas="warboard-zone-classic-Ashenvale" alpha="0.8">
                    <Size x="214" y="98"/>
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.leftPanelHeader" relativePoint="BOTTOM" x="0" y="-16"/>
                    </Anchors>
                </Texture>

                <FontString parentKey="leftPanelContentText" font="Fonts\FRIZQT__.ttf" justifyV="TOP">
                    <Size x="260" y="90"/>
                    <Color r="0.3" g="0.01" b="0.01"/>
                    <FontHeight val="12"/>
                    <Anchors>
                        <Anchor point="TOP" relativeKey="$parent.leftPanelContentTexture" relativePoint="BOTTOM" x="0" y="-10"/>
                    </Anchors>
                </FontString>



                <FontString parentKey="topRightPanelHeader" font="Fonts\MORPHEUS.ttf" text="Dungeons" justifyH="LEFT" justifyV="TOP">
                    <Size x="200" y="22"/>
                    <Color r="0.1" g="0.1" b="0.1"/>
                    <FontHeight val="22"/>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativeKey="$parent.topRightPanelPortraitRing" relativePoint="BOTTOMRIGHT" x="0" y="14"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="topRightPanelContentText" font="Fonts\FRIZQT__.ttf" justifyH="LEFT" justifyV="TOP">
                    <Size x="200" y="26"/>
                    <Color r="0.3" g="0.01" b="0.01"/>
                    <FontHeight val="12"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.topRightPanelHeader" relativePoint="BOTTOMLEFT" x="0" y="-4"/>
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent.topRightPanel" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
                    </Anchors>
                </FontString>


            </Layer>
        </Layers>

        <Frames>

            <Button parentKey="acceptSuggestion" inherits="UIPanelButtonTemplate" text="Details">
                <Size x="100" y="24"/>
                <Anchors>
                    <Anchor point="BOTTOM" relativeKey="$parent.leftPanel" relativePoint="BOTTOM" x="0" y="32"/>
                </Anchors>
            </Button>
            <Button parentKey="previousSuggestion">
                <Size x="30" y="30"/>
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.acceptSuggestion" relativePoint="LEFT" x="-40" y="-10"/>
                </Anchors>
            </Button>
            <Button parentKey="nextSuggestion">
                <Size x="30" y="30"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.acceptSuggestion" relativePoint="RIGHT" x="40" y="-10"/>
                </Anchors>
            </Button>

        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>