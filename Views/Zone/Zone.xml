<Ui>
    <Frame name="AdventureGuideZoneView" mixin="AdventureGuideZoneMixin" parent="UIParent">
        <Anchors>
            <Anchor point="TOPLEFT" x="0" y="0"/>
        </Anchors>
        <Size x="1" y="1"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="background" atlas="ClassHall_StoneFrame-BackgroundTile" horizTile="true" vertTile="true">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="4" y="0"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">

            </Layer>
            <Layer level="OVERLAY">

            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="mapContainer" parent="AdventureGuideZoneView" useParentLevel="true" ignoreParentScale="true" inherits="MapCanvasFrameTemplate" hidden="false">
                <HitRectInsets left="0" right="0" top="20" bottom="0"/>
                <Size x="1" y="1"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="20"/>
                    <Anchor point="BOTTOMRIGHT" x="-220" y="0"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="topBorder" atlas="_GeneralFrame-HorizontalBar" horizTile="true">
                            <Size y="8"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="-18"/>
                                <Anchor point="TOPRIGHT" x="0" y="-18"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="bottomBorder" atlas="_GeneralFrame-HorizontalBar" horizTile="true">
                            <Size y="8"/>
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" x="0" y="0"/>
                                <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Frames>
                    <Frame parentKey="BorderFrame"/>
                    <ScrollFrame inherits="MapCanvasFrameScrollContainerTemplate">

                    </ScrollFrame>
                    <Button parentKey="showHerbs" frameStrata="DIALOG" frameLevel="6" inherits="AdventurePortraitButton">
                        <Anchors>
                            <Anchor point="TOPRIGHT" relativeKey="$parent.mapContainer" relativePoint="TOPRIGHT" x="-1" y="-26"/>
                        </Anchors>
                    </Button>
                    <Button parentKey="showOres" frameStrata="DIALOG" frameLevel="6" inherits="AdventurePortraitButton">
                        <Anchors>
                            <Anchor point="RIGHT" relativeKey="$parent.showHerbs" relativePoint="LEFT" x="-6" y="0"/>
                        </Anchors>
                    </Button>
                    <Button parentKey="showQuests" frameStrata="DIALOG" frameLevel="6" inherits="AdventurePortraitButton">
                        <Anchors>
                            <Anchor point="RIGHT" relativeKey="$parent.showOres" relativePoint="LEFT" x="-6" y="0"/>
                        </Anchors>
                    </Button>
                </Frames>
            </Frame>

            <Frame parentKey="sidePanel">
                <Size x="220"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="38"/>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture atlas="QuestLogBackground">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                                <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="BORDER">
                        <Texture parentKey="leftBorder" atlas="!GeneralFrame-InsetFrame-Left" vertTile="true">
                            <Size x="8"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                                <Anchor point="BOTTOMLEFT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="ARTWORK">
                        <Texture parentKey="infoBackground" atlas="bonusobjectives-title-bg">
                            <Size y="32"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                                <Anchor point="TOPRIGHT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString parentKey="info" font="Fonts\FRIZQT__.ttf" text="Quests 1/10">
                            <Size x="218" y="28"/>
                            <Color r="1" g="1" b="1"/>
                            <FontHeight val="16"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="2" y="0"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Frame parentKey="questListview" inherits="AdventureWidgetsListviewTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" x="1" y="-41"/>
                            <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                        </Anchors>
                        <KeyValues>
                            <KeyValue key="frameType" value="FRAME" type="string"/>
                            <KeyValue key="itemTemplate" value="AdventureGuideZoneQuestListviewTemplate" type="string"/>
                            <KeyValue key="elementHeight" value="24" type="number"/>
                        </KeyValues>
                    </Frame>
                </Frames>
            </Frame>
        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>