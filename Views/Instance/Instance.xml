                                </Layers>
                            </Frame>
                            <Frame parentKey="guidePanel" inherits="ScrollingFontTemplate">
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent.abilitiesListview" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
