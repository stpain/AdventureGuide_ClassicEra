<Ui>
    <Frame name="AdventureGuide" mixin="AdventureGuideMixin" parent="UIParent" inherits="PortraitFrameTemplate" frameStrata="HIGH" enableMouse="true" resizable="true" movable="true">
        <Size x="900" y="500"/>
        <Anchors>
            <Anchor point="CENTER" x="0" y="0"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture textureSubLevel="-1">
                    <Color r="0.105" g="0.1" b="0.1" a="0.95"/>
                    <Size y="35"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="-25"/>
                        <Anchor point="TOPRIGHT" x="0" y="-25"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture atlas="AdventureMapLabel-Large">
                    <Size y="35"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="260" y="-25"/>
                        <Anchor point="TOPRIGHT" x="-120" y="-25"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="home" inherits="UIPanelButtonTemplate" text="Home">
                <Size x="200" y="34"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="60" y="-25"/>
                </Anchors>
            </Button>
            <ScrollFrame parentKey="homeGridview" inherits="AdventureWidgetsGridviewTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-60"/>
                    <Anchor point="BOTTOMRIGHT" x="-6" y="16"/>
                </Anchors>
            </ScrollFrame>

            <Frame parentKey="instanceView" hidden="true">
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="-60"/>
                    <Anchor point="BOTTOMRIGHT" x="-6" y="16"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="background">
                            <TexCoords left="0.0" right="0.767" top="0.0" bottom="0.82" />
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                                <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Frames>
                    <Frame parentKey="mapsButton" inherits="AdventureSmallHighlightButton">
                        <Anchors>
                            <Anchor point="TOPRIGHT" x="0" y="40"/>
                        </Anchors>
                        <Size x="40" y="40"/>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="background" atlas="GarrMission_MissionIcon-Exploration">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="0" y="0"/>
                                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Frame>
                    <Frame parentKey="encountersButton" inherits="AdventureSmallHighlightButton">
                        <Anchors>
                            <Anchor point="TOPRIGHT" x="-40" y="40"/>
                        </Anchors>
                        <Size x="40" y="40"/>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="background" atlas="ShipMissionIcon-Combat-Mission">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="0" y="0"/>
                                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Frame>
                    <Frame parentKey="infoButton" inherits="AdventureSmallHighlightButton">
                        <Anchors>
                            <Anchor point="TOPRIGHT" x="-80" y="40"/>
                        </Anchors>
                        <Size x="40" y="40"/>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture parentKey="background" atlas="GarrMission_MissionIcon-Logistics">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="0" y="0"/>
                                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Frame>

                    <Frame parentKey="lore" setAllPoints="true">
                        <layers>
                            <Layer level="ARTWORK">
                                <Texture parentKey="icon">
                                    <Texcoords left="0" right="0.76" top="0" bottom="0.68"/>
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="10" y="-10"/>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </layers>
                        <Frames>
                            <Frame parentKey="text" inherits="ScrollingFontTemplate">
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent.icon" relativePoint="TOPRIGHT" x="40" y="-50"/>
                                    <Anchor point="BOTTOMRIGHT" x="-30" y="50"/>
                                </Anchors>
                                <KeyValues>
                                    <KeyValue key="fontName" value="GameFontNormal_NoShadow"/>
                                </KeyValues>
                            </Frame>
                        </Frames>
                    </Frame>

                    <Frame parentKey="encounters" setAllPoints="true" hidden="true">
                        <Frames>
                            <Frame parentKey="bossListview" inherits="AdventureWidgetsListviewTemplate">
                                <Anchors>
                                    <Anchor point="TOPLEFT" x="30" y="-60"/>
                                    <Anchor point="BOTTOMLEFT" x="30" y="30"/>
                                </Anchors>
                                <KeyValues>
                                    <KeyValue key="frameType" value="FRAME" type="string"/>
                                    <KeyValue key="itemTemplate" value="AdventureGuideBossListviewItemTemplate" type="string"/>
                                    <KeyValue key="elementHeight" value="60" type="number"/>
                                </KeyValues>
                            </Frame>
                            <Frame parentKey="lootListview" inherits="AdventureWidgetsListviewTemplate">
                                <Anchors>
                                    <Anchor point="TOPRIGHT" x="-30" y="-60"/>
                                    <Anchor point="BOTTOMRIGHT" x="-30" y="30"/>
                                </Anchors>
                                <KeyValues>
                                    <KeyValue key="frameType" value="FRAME" type="string"/>
                                    <KeyValue key="itemTemplate" value="AdventureGuideLootListviewItemTemplate" type="string"/>
                                    <KeyValue key="elementHeight" value="44" type="number"/>
                                </KeyValues>
                            </Frame>
                        </Frames>
                    </Frame>

                    <Frame parentKey="maps" frameLevel="6" setAllPoints="true" hidden="true">
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture parentKey="background">
                                    <Texcoords left="0" right="0.9765625" top="0" bottom="0.6513671875"/>
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="0" y="0"/>
                                        <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                        <Frames>
                            <Button parentKey="previous">
                                <Size x="30" y="30"/>
                                <Anchors>
                                    <Anchor point="BOTTOMRIGHT" x="-40" y="10"/>
                                </Anchors>
                            </Button>
                            <Button parentKey="next">
                                <Size x="30" y="30"/>
                                <Anchors>
                                    <Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
                                </Anchors>
                            </Button>
                        </Frames>
                    </Frame>
                </Frames>
            </Frame>

            <Button parentKey="resize" inherits="PanelResizeButtonTemplate">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnUpdate method="OnUpdate"/>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>